<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/instructionTitle"
        android:layout_width="238dp"
        android:layout_height="89dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="-2dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Instruction"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="318dp"
        android:layout_height="253dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/sop_home_steps"
        android:fontFamily="@font/fredokaone_regular"
        android:padding="20dp"
        android:paddingTop="10dp"
        android:text="Click on the correct answer to score! You may study the SOP on the Home page by clicking (Indoor SOP) or (Outdoor SOP)."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-9dp"
        android:padding="20dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Tips: The higher the score, the higher the level!"
        android:textSize="12dp" />
</RelativeLayout>